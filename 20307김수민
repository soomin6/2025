import streamlit as st
from datetime import date

# 타이틀
st.title("🌟 오하아사 별자리 운세 검색기")

# 날짜 선택
selected_date = st.date_input("운세를 보고 싶은 날짜를 선택하세요", value=date.today())

# 가짜 운세 데이터 (예시용)
ohasa_fortunes = {
    "양자리": {"rank": 3, "advice": "계획한 대로 일이 척척 진행됩니다!", "lucky_item": "파란색 볼펜"},
    "황소자리": {"rank": 5, "advice": "불필요한 데서 스트레스 받지 않도록 조심하세요.", "lucky_item": "초콜릿"},
    "쌍둥이자리": {"rank": 9, "advice": "세심함이 오히려 방해가 될 수 있어요.", "lucky_item": "유리컵"},
    "게자리": {"rank": 1, "advice": "모든 것이 당신 편! 과감하게 행동하세요.", "lucky_item": "빨간 운동화"},
    "사자자리": {"rank": 7, "advice": "도움이 필요한 친구에게 힘을 주세요.", "lucky_item": "줄무늬 셔츠"},
    "처녀자리": {"rank": 8, "advice": "새로운 공부를 시작해보기 좋아요.", "lucky_item": "연필"},
    "천칭자리": {"rank": 10, "advice": "낙관적인 태도가 도움이 됩니다.", "lucky_item": "커피"},
    "전갈자리": {"rank": 11, "advice": "오늘은 조용히 혼자 있는 게 좋아요.", "lucky_item": "헤드폰"},
    "사수자리": {"rank": 6, "advice": "새로운 사람과의 만남이 기대돼요.", "lucky_item": "책"},
    "염소자리": {"rank": 2, "advice": "작은 노력으로 큰 결과를 얻을 수 있어요.", "lucky_item": "노란색 티셔츠"},
    "물병자리": {"rank": 4, "advice": "직감이 좋은 날이에요. 믿어보세요!", "lucky_item": "열쇠고리"},
    "물고기자리": {"rank": 12, "advice": "기대하지 않은 변수에 주의!", "lucky_item": "우산"},
}

# 운세 출력
st.subheader(f"🔮 {selected_date.strftime('%Y년 %m월 %d일')} 오하아사 운세")

# 순위 기준 정렬 출력
for sign, data in sorted(ohasa_fortunes.items(), key=lambda x: x[1]["rank"]):
    st.markdown(f"### {data['rank']}위: {sign}")
    st.write(f"**조언:** {data['advice']}")
    st.write(f"**행운의 아이템:** {data['lucky_item']}")
    st.markdown("---")
